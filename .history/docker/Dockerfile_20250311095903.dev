FROM python:3.11-slim

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PYTHONPATH=/workspaces/pipecat/src \
    PIPECAT_CACHE_DIR=/app/cache

# Install system dependencies and VS Code tools
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    curl \
    git \
    openssh-client \
    vim \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Create cache directory
RUN mkdir -p /app/cache && chmod 777 /app/cache

# Create non-root user
ARG USERNAME=vscode
ARG USER_UID=1000
ARG USER_GID=$USER_UID

RUN groupadd --gid $USER_GID $USERNAME \
    && useradd --uid $USER_UID --gid $USER_GID -m $USERNAME \
    && apt-get update \
    && apt-get install -y sudo \
    && echo $USERNAME ALL=\(root\) NOPASSWD:ALL > /etc/sudoers.d/$USERNAME \
    && chmod 0440 /etc/sudoers.d/$USERNAME

# Install Python tools for development
RUN pip install --no-cache-dir \
    black \
    isort \
    ruff \
    pytest \
    pytest-cov \
    mypy \
    pip-tools \
    twine \
    build \
    ipython \
    debugpy

# Set working directory
WORKDIR /workspaces/pipecat

# Switch to non-root user
USER $USERNAME

# Setup remote debugging capability
EXPOSE 5678
